<div class="showTitle">
    <h1>Create a group to Address</h1>
</div>

<div class="showBody">
    <form action="/cities/{{cityName}}/issues/{{issueIndex}}/taskforces" method="post">
        <div>
            <label for="name">Taskforce Name:</label>
            <input type="text" name="name" placeholder="Name" />
        </div>
        <div>
            <label for="missionStatement">Mission Statement:</label>
            <input type="text" name="missionStatement" placeholder="Mission Statement" />
        </div>
        <div>
            <label for="leadOrganizer">Lead Organizer:</label>
            <input type="text" name="leadOrganizer" placeholder="Lead Organizer " />
        </div>
        <div>
            <label for="contactEmail">Organizer Contact Email:</label>
            <input type="text" name="contactEmail" placeholder="example@example.com" />
        </div>

        <button type="submit">Create Taskforce!</button>
    </form>
</div>