<div class="showTitle">
    <h1>
        Please Edit Your Task Force Info Here!
    </h1>
</div>


<div class="showBody">
    {{cityName}}
    <form action="/cities/{{cityName}}/issues/{{issueIndex}}/taskforces/{{taskforceIndex}}?_method=PUT" method="post">
        <div>
            <label for="name">Taskforce Name:</label>
            <input type="text" name="name" value="{{taskforce.name}}" />
        </div>
        <div>
            <label for="missionStatement">Mission Statement:</label>
            <input type="text" name="missionStatement" value="{{taskforce.missionStatement}}" />
        </div>
        <div>
            <label for="leadOrganizer">Lead Organizer:</label>
            <input type="text" name="leadOrganizer" value="{{taskforce.leadOrganizer}}" />
        </div>
        <div>
            <label for="contactEmail">Organizer Contact Email:</label>
            <input type="text" name="contactEmail" value="{{taskforce.contactEmail}}" />
        </div>

        <button type="submit">Edit TaskForce!</button>
    </form>
</div>