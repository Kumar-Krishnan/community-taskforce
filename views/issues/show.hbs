<div class="showTitle">
    <h3>{{issue.name}}
    <br>
        <span class="tagline">{{issue.tagline}}
        </span>
    </h3>
        
</div>
<div class="showBody">
    <br>
    {{issue.description}}
</div>


    <a href="/cities/{{cityName}}/issues/{{issueIndex}}/edit"><button> Edit issue</button></a>
<form action="/cities/{{cityName}}/issues/{{issueIndex}}?_method=DELETE" method="post">
    <button type="submit">
        DELETE
    </button>
</form>
</div>

<div class="listShow">
    {{#each issue.taskforces}}
        <a href="/cities/{{../cityName}}/issues/{{../issueIndex}}/taskforces/{{@index}}">
            <div class="listBox">
            Task Force Name: {{name}}
            <br>
            Lead Organizer:{{leadOrganizer}}
            <br>
            Contact Info:{{contactEmail}}
            </div>
        </a>
    {{/each}}
</div>
